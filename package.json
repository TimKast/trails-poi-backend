{
  "name": "trails-backend",
  "version": "2.0.0",
  "description": "Hapi backend for poi trail api",
  "license": "ISC",
  "author": "Tim Kastner",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir dist",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "node --inspect-brk --import tsx src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "@vitest/coverage-v8": "4.0.16",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "mongodb-memory-server": "11.0.1",
    "prettier": "3.7.4",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.16"
  },
  "dependencies": {
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.4.4",
    "@hapi/inert": "7.1.0",
    "@hapi/vision": "7.0.3",
    "cloudinary": "2.8.0",
    "dotenv": "17.2.3",
    "hapi-auth-jwt2": "11.0.0",
    "hapi-swagger": "17.3.2",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.3",
    "mongoose": "9.0.2",
    "uuid": "13.0.0"
  }
}
