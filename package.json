{
  "name": "trails-backend",
  "version": "0.1.0",
  "description": "Hapi backend for poi trail api",
  "license": "ISC",
  "author": "Tim Kastner",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json --outDir dist",
    "start": "npm run build && node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "dev:debug": "node --inspect-brk --import tsx src/server.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.4.4",
    "dotenv": "^17.2.3",
    "hapi-auth-jwt2": "^11.0.0",
    "jsonwebtoken": "^9.0.3",
    "lowdb": "^7.0.1",
    "uuid": "^13.0.0"
  }
}
